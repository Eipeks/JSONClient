<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ehnyn.taskjson.Activities.PostActivity"
    tools:showIn="@layout/activity_post">

    <TextView
        android:id="@+id/btnPostRequest"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Hello Post Activity" />

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="wrap_content"
        android:layout_below="@+id/btnPostRequest"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

    <Button
        android:id="@+id/btnPostEnd"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/postEndpoint" />

    <Button
        android:id="@+id/btnGetEnd"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/getENDPOINT" />


        <Button
            android:id="@+id/btnPut"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="@string/putEndpoint" />

        <Button
            android:id="@+id/btnDELETE"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="@string/deleteENDPOINT" />

    </LinearLayout>
</RelativeLayout>
